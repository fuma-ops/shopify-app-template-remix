<script>
  (function() {
    // üõë 1. STOP if we are in the Theme Editor (Design Mode)
    // This prevents "Fake Views" when you are just changing settings.
    if (window.Shopify && window.Shopify.designMode) {
      console.log("Sticky Cart: Analytics disabled in Editor");
      return;
    }

    const SHOP_DOMAIN = "{{ shop.permanent_domain }}";
    const API_URL = "https://zsolutions-sticky-cart.onrender.com/api/track";

    // üõë 2. Session Storage Check (Prevent duplicates on reload)
    // We only count a view if we haven't counted it in this session yet.
    const sessionKey = `sticky_viewed_${window.location.pathname}`;

    function trackEvent(eventName) {
      const formData = new FormData();
      formData.append("shop", SHOP_DOMAIN);
      formData.append("event", eventName);

      fetch(API_URL, {
        method: "POST",
        body: formData
      }).catch(err => console.error("Tracking Error:", err));
    }

    window.addEventListener("load", () => {
      // Check if we already tracked this page view
      if (!sessionStorage.getItem(sessionKey)) {
        trackEvent("view");
        sessionStorage.setItem(sessionKey, "true"); // Mark as viewed
      }
    });

    const btn = document.querySelector(".sticky-btn");
    if (btn) {
      btn.addEventListener("click", () => {
        trackEvent("click");
      });
    }
  })();
</script>